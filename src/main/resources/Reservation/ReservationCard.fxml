<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="283.0" prefWidth="445.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ReservationCardController">
    <children>
        <Rectangle arcHeight="20.0" arcWidth="20.0" fill="#ececec" height="269.0" layoutX="10.0" layoutY="10.0" stroke="#bdbdbd" strokeType="INSIDE" width="428.0" />
        <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
            <HBox>
                <ImageView fx:id="clubImageView" fitHeight="153.0" fitWidth="100.0">

                </ImageView>
                <VBox spacing="5.0">
                    <Label fx:id="playerLabel" prefWidth="270.0" stylesheets="@styles.css" text="Club Name" textFill="#000000">
                        <font>
                            <Font name="Arial Bold" size="16.0" />
                        </font>
                    </Label>
                    <HBox spacing="10.0">
                        <Label stylesheets="@styles.css" text="Height:" textFill="#000000" />
                        <Label fx:id="stadiumLabel" stylesheets="@styles.css" text="10.0" textFill="#000000" />
                    </HBox>
                    <HBox spacing="10.0">
                        <Label stylesheets="@styles.css" text="Width:" textFill="#000000" />
                        <Label fx:id="dateLabel" stylesheets="@styles.css" text="10.0" textFill="#000000" />
                    </HBox>
                    <HBox spacing="10.0">
                        <Label stylesheets="@styles.css" text="Start Time:" textFill="#000000" />
                        <Label fx:id="startTimeLabel" stylesheets="@styles.css" text="10:00 AM" textFill="#000000" />
                    </HBox>
                    <HBox spacing="10.0">
                        <Label stylesheets="@styles.css" text="End Time:" textFill="#000000" />
                        <Label fx:id="endTimeLabel" stylesheets="@styles.css" text="06:00 PM" textFill="#000000" />
                    </HBox>
                    <HBox spacing="10.0">
                        <Label stylesheets="@styles.css" text="Description:" textFill="#000000" />
                        <Label fx:id="descriptionLabel" stylesheets="@styles.css" text="Description here" textFill="#000000" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
        <Button fx:id="deleteButton" layoutX="323.0" layoutY="214.0" style="-fx-background-color: #f64646; -fx-text-fill: white;" stylesheets="@styles.css" text="Delete" />
        <Button fx:id="validateButton" layoutX="39.0" layoutY="213.0" style="-fx-background-color: #00cc6a; -fx-text-fill: white;" stylesheets="@styles.css" text="Validate Reservation" visible="false" />
    </children>
    <stylesheets>
        <URL value="@/Reservation/stylesCard.css" />
    </stylesheets>
</AnchorPane>
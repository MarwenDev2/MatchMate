<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="CardForm" prefHeight="200.0" prefWidth="150.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CardViewEvent">
   <children>
      <!-- Image -->
      <ImageView fx:id="ImageEvent" fitHeight="100.0" fitWidth="100.0" layoutX="25.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />

      <!-- Event Name -->
      <Label fx:id="NameLabel" layoutX="30.0" layoutY="110.0" prefHeight="18.0" prefWidth="74.0" styleClass="container" stylesheets="@styles23.css" textAlignment="CENTER" />

      <!-- Start Date -->
      <Label fx:id="Start_Date" layoutX="47.0" layoutY="138.0" prefHeight="18.0" prefWidth="73.0" text="Start Date" textAlignment="CENTER" />

      <!-- End Date -->
      <Label fx:id="EndDateLabel" layoutX="47.0" layoutY="160.0" prefHeight="18.0" prefWidth="74.0" text="End Date" textAlignment="CENTER" />

      <!-- Participants -->
      <Label fx:id="ParticpatorsLabel" layoutX="66.0" layoutY="182.0" prefHeight="18.0" prefWidth="59.0" text="Participants: 0" textAlignment="CENTER" />

      <!-- Price -->
      <Label fx:id="PriceLabel" layoutX="30.0" layoutY="200.0" prefHeight="18.0" prefWidth="74.0" text="Price: $0.00" textAlignment="CENTER" />

      <!-- Participate Button -->
      <Button fx:id="ParticpateButton" layoutX="25.0" layoutY="230.0" minHeight="30.0" minWidth="100.0" onAction="#AddParticipation" text="Join" textAlignment="CENTER" />
      <Label fx:id="NameLabel1" layoutY="110.0" prefHeight="18.0" prefWidth="42.0" text="Event:" textAlignment="CENTER" />
      <Label fx:id="Start_Date1" layoutY="138.0" prefHeight="18.0" prefWidth="42.0" text="Start Date" textAlignment="CENTER" />
      <Label fx:id="EndDateLabel1" layoutX="5.0" layoutY="160.0" prefHeight="18.0" prefWidth="36.0" text="End Date" textAlignment="CENTER" />
      <Label fx:id="ParticpatorsLabel1" layoutX="5.0" layoutY="182.0" prefHeight="18.0" prefWidth="74.0" text="Participants: " textAlignment="CENTER" />
      <Label fx:id="PriceLabel1" layoutX="5.0" layoutY="200.0" prefHeight="18.0" prefWidth="42.0" text="Price: " textAlignment="CENTER" />
   </children>
</AnchorPane>
